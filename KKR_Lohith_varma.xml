<?xml version="1.0"?>
<robot name="fish_hpurv">

  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>

  <!-- Fish Body Definition -->
  <link name="body">
    <visual>
      <geometry>
        <box size="1.0 0.5 0.3"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="1.0 0.5 0.3"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <!-- Body mass is 150 kg -->
      <mass value="150.0"/>
      <inertia ixx="1.88" ixy="0.0" ixz="0.0"
               iyy="6.25" iyz="0.0" izz="6.25"/>
    </inertial>
  </link>

  <!-- Left Fin Definition -->
  <link name="fin_left">
    <visual>
      <geometry>
        <box size="0.5 0.05 0.2"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.05 0.2"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <!-- Fin mass is 5 kg -->
      <mass value="5.0"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0"
               iyy="0.021" iyz="0.0" izz="0.013"/>
    </inertial>
  </link>

  <!-- Right Fin Definition -->
  <link name="fin_right">
    <visual>
      <geometry>
        <box size="0.5 0.05 0.2"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.05 0.2"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <!-- Another 5 kg -->
      <mass value="5.0"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0"
               iyy="0.021" iyz="0.0" izz="0.013"/>
    </inertial>
  </link>

  <!-- Caudal (Tail) Fin Definition -->
  <link name="caudal_fin">
    <visual>
      <geometry>
        <box size="0.5 0.05 0.2"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.05 0.2"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <!-- Tail mass is 6 kg -->
      <mass value="6.0"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0"
               iyy="0.021" iyz="0.0" izz="0.013"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="left_fin_joint" type="revolute">
    <parent link="body"/>
    <child link="fin_left"/>
    <origin rpy="1.57 0 1.57" xyz="0.0 0.25 0.0"/>
    <axis xyz="1 0 0"/>
    <limit effort="10.0" lower="-1.57" upper="1.57" velocity="1.0"/>
  </joint>

  <joint name="right_fin_joint" type="revolute">
    <parent link="body"/>
    <child link="fin_right"/>
    <origin rpy="1.57 0 1.57" xyz="0.0 -0.25 0.0"/>
    <axis xyz="1 0 0"/>
    <limit effort="10.0" lower="-1.57" upper="1.57" velocity="1.0"/>
  </joint>

  <joint name="caudal_fin_joint" type="revolute">
    <parent link="body"/>
    <child link="caudal_fin"/>
    <origin rpy="0 1.57 3.14" xyz="-0.55 0.0 0.0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="-1.57" upper="1.57" velocity="1.0"/>
  </joint>

  <!-- Gazebo Settings: reduce friction to avoid disturbances -->
  <gazebo reference="body">
    <mu1>0</mu1>
    <mu2>0</mu2>
  </gazebo>

  <!-- Buoyancy Plugin with multiple links -->
  <gazebo>
    <plugin name="buoyancy_plugin" filename="libBuoyancyPlugin.so">
      <fluid_density>1000</fluid_density>
      <!-- Apply buoyancy to the body -->
      <link name="body">
        <!-- Use the displaced volume needed for 150 kg (0.15 mÂ³) -->
        <volume>0.15</volume>
        <center_of_volume>0 0 0</center_of_volume>
      </link>
      <!-- Apply buoyancy to the left fin -->
      <link name="fin_left">
        <volume>0.005</volume>
        <center_of_volume>0 0 0</center_of_volume>
      </link>
      <!-- Apply buoyancy to the right fin -->
      <link name="fin_right">
        <volume>0.005</volume>
        <center_of_volume>0 0 0</center_of_volume>
      </link>
      <!-- Apply buoyancy to the caudal (tail) fin -->
      <link name="caudal_fin">
        <volume>0.006</volume>
        <center_of_volume>0 0 0</center_of_volume>
      </link>
    </plugin>
  </gazebo>

  <!-- Hydrodynamics Plugin -->
  <gazebo>
    <plugin name="hydrodynamics_plugin" filename="libHydrodynamicsPlugin.so">
      <!-- Added mass terms (example values) -->
      <xDotU>-10.0</xDotU>
      <yDotV>-10.0</yDotV>
      <zDotW>-10.0</zDotW>
      <kDotP>-0.1</kDotP>
      <mDotQ>-0.1</mDotQ>
      <nDotR>-0.1</nDotR>
      <!-- Linear and quadratic damping coefficients (example values) -->
      <xUabsU>-0.32282</xUabsU>
      <xU>-2.5</xU>
      <yVabsV>-0.1</yVabsV>
      <yV>-0.5</yV>
      <zWabsW>-0.1</zWabsW>
      <zW>-0.5</zW>
      <kPabsP>-0.05</kPabsP>
      <kP>-0.2</kP>
      <mQabsQ>-0.05</mQabsQ>
      <mQ>-0.2</mQ>
      <nRabsR>-0.05</nRabsR>
      <nR>-0.2</nR>
      <default_current>0 0 0</default_current>
    </plugin>
  </gazebo>

</robot>
